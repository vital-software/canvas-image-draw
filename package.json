{
  "name": "canvas-image-draw",
  "version": "1.0.0",
  "description": "Draw a cropped image to a <canvas> element",
  "license": "MIT",
  "repository": "vital-software/canvas-image-draw",
  "homepage": "https://github.com/vital-software/canvas-image-draw#readme",
  "author": "Te Riu Warren <teriu@teriu.name>",
  "bugs": {
    "url": "https://github.com/vital-software/canvas-image-draw/issues"
  },
  "engines": {
    "node": ">=8.1.3"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && NODE_ENV=production babel app --out-dir lib --ignore spec.js,test.js",
    "format": "prettier-eslint \"app/**/*.{js,jsx}\" --write",
    "lint": "eslint \"app/**/*.{js,jsx}\" --quiet",
    "precommit": "yarn run lint",
    "prepublish": "yarn build",
    "test": "jest --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node"
    ],
    "modulePaths": [
      "<rootDir>/app/"
    ],
    "roots": [
      "<rootDir>/app/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(js|jsx)$",
    "transform": {
      ".*": "babel-jest"
    }
  },
  "devDependencies": {
    "@semantic-release/git": "4.0.0",
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-jest": "22.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "canvas-prebuilt": "1.6.5-prerelease.1",
    "eslint": "4.18.1",
    "eslint-plugin-babel": "4.1.2",
    "eslint-plugin-compat": "2.2.0",
    "eslint-plugin-filenames": "1.2.0",
    "eslint-plugin-flowtype": "2.45.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jest": "21.12.2",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "greenkeeper-lockfile": "1.13.2",
    "husky": "0.14.3",
    "jest": "22.4.0",
    "prettier-eslint-cli": "4.3.2",
    "semantic-release": "15.0.0",
    "stylelint": "9.0.0",
    "vitalizer": "3.0.0"
  },
  "dependencies": {
    "exif-js": "2.1.1"
  }
}
