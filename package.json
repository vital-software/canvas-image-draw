{
  "name": "canvas-image-draw",
  "version": "1.1.0",
  "description": "Draw a cropped image to a <canvas> element",
  "license": "MIT",
  "repository": "vital-software/canvas-image-draw",
  "homepage": "https://github.com/vital-software/canvas-image-draw#readme",
  "author": "Te Riu Warren <teriu@teriu.name>",
  "bugs": {
    "url": "https://github.com/vital-software/canvas-image-draw/issues"
  },
  "engines": {
    "node": ">=10"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && NODE_ENV=production babel app --out-dir lib --ignore spec.js,test.js",
    "lint": "eslint \"app/**/*.{js,jsx}\" --quiet",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn build"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node"
    ],
    "modulePaths": [
      "<rootDir>/app/"
    ],
    "roots": [
      "<rootDir>/app/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(js|jsx)$",
    "transform": {
      ".*": "babel-jest"
    }
  },
  "devDependencies": {
    "@babel/cli": "7.5.0",
    "@babel/core": "7.5.4",
    "@babel/plugin-proposal-object-rest-spread": "7.5.4",
    "@babel/preset-env": "7.5.4",
    "@semantic-release/git": "7.0.16",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "canvas": "2.5.0",
    "eslint": "6.0.1",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "semantic-release": "15.13.18"
  },
  "dependencies": {
    "exif-js": "2.1.1"
  }
}
